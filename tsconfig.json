{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "paths": {
      "@lib/common": [
        "libs/common/src/index.ts"
      ],
      "@lib/prisma": [
        "libs/prisma/src"
      ],
      "@lib/prisma/*": [
        "libs/prisma/src/*"
      ],
      "@lib/graphql": [
        "libs/graphql/src"
      ],
      "@lib/graphql/*": [
        "libs/graphql/src/*"
      ],
      "@lib/auth": [
        "libs/auth/src"
      ],
      "@lib/auth/*": [
        "libs/auth/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "apps/**/*.ts",
    "libs/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}